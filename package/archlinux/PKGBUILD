# Maintainer: Mikhail Gozhev <m@gozhev.ru>
pkgname=make.mk
pkgver=0.0.1
pkgrel=1
epoch=
pkgdesc="A set of GNU Make rules for creating less cluttered Makefiles"
arch=(any)
url="https://github.com/gozhev/make.mk"
license=('unknown')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=()
noextract=()
md5sums=()
validpgpkeys=()

prepare() {
	ln --symbolic --verbose "../../../." "$pkgname-$pkgver"
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
